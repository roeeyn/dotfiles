#!/bin/bash
set -e
echo "Linking the files..."

# Symlink dot/* into home directory as hidden files
stow ~/.dotfiles/dot/ --target=$HOME

# Symlink files/* into home directory as regular files
stow ~/.dotfiles/files/ --target=$HOME

# Symlink bin/* into local binaries as regular binaries
stow ~/.dotfiles/bin/ --target=/usr/local/bin/

echo "Installing rosetta..."
sudo softwareupdate --install-rosetta
